import pygame
import random
import time

pygame.init()
width = 600
height = 400
screen = pygame.display.set_mode((width, height))
pygame.display.flip()
pygame.display.set_caption('Robot Pathfinder')


BLACK = [0, 0, 0]
WHITE = [255, 255, 255]


class robot():
   def __init__(self, colour):
      self.colour = colour
      '''self.width = width
      self.height = height '''     
       
   def set_pos(self):
      self.rect.y = random.randrange(300, 20)
      self.rect.x = random.randrange(0, 100)

   def spawnRobot(self):
      rect = pygame.draw.rect(screen, self.colour, (100, 50, 20, 20), 0)
                                                    
class landmark(pygame.sprite.Sprite):
    def __init__(self, colour, width, height, treasure):
      pygame.sprite.Sprite.__init__(self)

while True:
   screen.fill(WHITE)
   r1 = robot(BLACK)
   r1.spawnRobot()

   pygame.draw.rect(screen, BLACK, r1.spawnRobot.rect)
   pygame.display.update()
   pygame.display.flip()
   mainClock.tick(60)
